<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/dataBindingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataBinding Simple Project"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

   <Button
       android:id="@+id/getMethodButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Fetching Data through GET"
       android:layout_marginTop="20dp"
       android:backgroundTint="@color/purple_500"
       app:layout_constraintTop_toBottomOf="@+id/dataBindingButton"
       app:layout_constraintLeft_toLeftOf="@+id/dataBindingButton"
       app:layout_constraintRight_toRightOf="@+id/dataBindingButton"/>

   <Button
       android:id="@+id/postMethodButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Fetching Data through POST"
       android:backgroundTint="@color/purple_700"
       android:layout_marginTop="20dp"
       app:layout_constraintTop_toBottomOf="@+id/getMethodButton"
       app:layout_constraintLeft_toLeftOf="@+id/getMethodButton"
       app:layout_constraintRight_toRightOf="@+id/getMethodButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>